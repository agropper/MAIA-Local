# Use Node.js 20.19.2 as specified in package.json
FROM node:20.19.2-alpine

# Set working directory
WORKDIR /app

# Copy package files from MAIA-vue-ai-example subdirectory
COPY MAIA-vue-ai-example/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code from MAIA-vue-ai-example subdirectory
COPY MAIA-vue-ai-example/ .

# Build the application
RUN npm run build

# Expose port
EXPOSE 8080

# Start the application
CMD ["npm", "start"] 