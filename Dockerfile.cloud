# Use Node.js 20.19.2 as specified in package.json
FROM node:20.19.2-alpine

# Set working directory
WORKDIR /app

# Copy package files first for better caching
COPY MAIA-vue-ai-example/package.json MAIA-vue-ai-example/package-lock.json ./

# Install dependencies
RUN npm ci --only=production

# Copy the entire MAIA-vue-ai-example directory
COPY MAIA-vue-ai-example/ .

# Build the application
RUN npm run build

# Expose port
EXPOSE 8080

# Start the application
CMD ["npm", "start"] 